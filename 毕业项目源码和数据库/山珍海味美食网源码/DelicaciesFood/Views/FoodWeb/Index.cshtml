
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using DelicaciesFood.Model;
@{
    List<RecipeType> types = ViewBag.typeList;
    List<Food> foods = ViewBag.foodsList;
    List<Sfav> sfavs = ViewBag.sfavsList;
    List<DietNous> dietnousList = ViewBag.dietnousList;
}


<!-- CSS Bootstrap & Custom -->
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/templatemo-misc.css" rel="stylesheet" />
<link href="~/Content/animate.css" rel="stylesheet" />
<link href="~/Content/templatemo-main.css" rel="stylesheet" />
<link href="~/Content/new.css" rel="stylesheet" />

<!-- Favicons -->
<link rel="shortcut icon" href="images/ico/favicon.ico">

<!-- JavaScripts -->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/modernizr.js"></script>

@*每日推荐板块*@
<div class="flexslider">
    <ul class="slides">
        <li>
            <img src="~/images/刀削面.jpg" width="1600" height="540" alt="">
            <div class="flex-caption">
            <h2>刀削面</h2>   
            </div>
        </li>
        <li>
            <img src="~/images/东坡肉.jpg" width="1600" height="540" alt="">
            <div class="flex-caption">
                <h2>东坡肉</h2>
                </div>
        </li>
    </ul>
</div>

@*食谱大全板块*@
<div id="services" class="section-cotent">
    <div class="container">
        <div class="title-section text-center">
            <h2>食谱大全</h2>
            <span></span>
        </div> <!-- /.title-section -->
        <div class="complete_menu">
            <div id="show" class="category_box">
                @foreach (var item in types)
                {
                    if (item.PID == null)
                    {
                        @*大标题*@
                        <span class="Big_type">@item.TypeName</span>
                        <div class="small_type_box">
                            @foreach (var item1 in types)
                            {
                                if (item.TypeID == item1.PID)
                                {
                                    <a class="small_type" href="/Foods/Index">@item1.TypeName</a>
                                }
                            }
                        </div>
                        <br />
                        <br />
                    }
                }
            </div>
        </div> <!-- /.complete_menu -->
    </div> <!-- /.container -->
</div> <!-- /#services -->
@*健康饮食小知识*@
