    <div class="container">
        <div class="title-section text-center">
            <h2>健康饮食小知识</h2>
            <span></span>
        </div> <!-- /.title-section -->
        <div class="Diet_row">
            <div class="Diet_box">
                
                <div class="Diet_img_box">
                    <img id="Diet_img_1"  src="~/images/diet/蛋白粉.jpg" />
                </div>
                <div>
                    <ul style="width:325px">
                        <li id="Diet_li_1" style="border:none;"><a href="/Health/Index">吃火锅时饮料选择有讲究</a></li>
                        <li id="Diet_li_2"><a href="/Health/Index">如何选择香蕉</a></li>
                        <li id="Diet_li_3"><a href="/Health/Index">野生解困有养脾胃</a></li>
                    </ul>
                </div>
            </div> <!-- /.Diet_box -->
            <div class="Diet_box">
                <div class="">
                    <img style="width: 180px;" src="~/images/diet/水飞蓟.jpg" />
                </div>
                <div>
                    <ul style="width:325px">
                        <li style="border:none"><a href="/Health/Index">吃火锅喝饮料有讲究</a></li>
                        <li><a href="/Health/Index">如何选择草莓</a></li>
                        <li><a href="/Health/Index">橙子和橘子的区别</a></li>
                    </ul>
                </div>
            </div> <!-- /.Diet_box -->
        </div> <!-- /.row -->
    </div> <!-- /.container -->
</div> <!-- /#portfolio -->
@*时令时蔬*@
<div id="about" class="section-cotent">
    <div class="container">
        <div class="title-section text-center">
            <h2>时令时蔬</h2>
            <span></span>
        </div> <!-- /.title-section -->
        <div class="row">
            @foreach (var item in sfavs)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="service-item fruits_box">
                        <div class="fruits_imagebox">
                            <img class="fruits_image" src="~/images/fruits/@item.SfavPic" />
                        </div>
                        <div class="fruits_details">
                            <a href="/Health/Index">@item.SfavName</a>
                            <p>
                                @item.SfavExplain
                            </p>
                        </div>
                    </div> <!-- /.service-item -->
                </div> <!-- /.col-md-3 -->
            }
        </div> <!-- /.row -->
        <h6 style="text-align: center; font-size: 21px; margin-top: 10px;">当前月份：@ViewBag.time</h6>
    </div> <!-- /.container -->
</div> <!-- /#about -->

