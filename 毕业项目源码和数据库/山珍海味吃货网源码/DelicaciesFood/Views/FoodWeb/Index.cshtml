@*食谱大全板块*@
<div id="services" class="section-cotent">
    <div class="container">
        <div class="title-section text-center">
            <h2>食谱大全</h2>
            <span></span>
        </div> <!-- /.title-section -->
        <div class="complete_menu">
            <div id="show" class="category_box">
                @foreach (var item in types)
                {
                    if (item.PID == null)
                    {
                        @*大标题*@
                        <span class="Big_type">@item.TypeName</span>
                        <div class="small_type_box">
                            @foreach (var item1 in types)
                            {
                                if (item.TypeID == item1.PID)
                                {
                                    <a class="small_type" href="/Foods/Index">@item1.TypeName</a>
                                }
                            }
                        </div>
                        <br />
                        <br />
                    }
                }
            </div>
        </div> <!-- /.complete_menu -->
    </div> <!-- /.container -->
</div> <!-- /#services -->
