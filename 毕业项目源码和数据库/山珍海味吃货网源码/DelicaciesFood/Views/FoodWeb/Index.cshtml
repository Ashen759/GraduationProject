@*时令时蔬*@
<div id="about" class="section-cotent">
    <div class="container">
        <div class="title-section text-center">
            <h2>时令时蔬</h2>
            <span></span>
        </div> <!-- /.title-section -->
        <div class="row">
            @foreach (var item in sfavs)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="service-item fruits_box">
                        <div class="fruits_imagebox">
                            <img class="fruits_image" src="~/images/fruits/@item.SfavPic" />
                        </div>
                        <div class="fruits_details">
                            <a href="/Health/Index">@item.SfavName</a>
                            <p>
                                @item.SfavExplain
                            </p>
                        </div>
                    </div> <!-- /.service-item -->
                </div> <!-- /.col-md-3 -->
            }
        </div> <!-- /.row -->
        <h6 style="text-align: center; font-size: 21px; margin-top: 10px;">当前月份：@ViewBag.time</h6>
    </div> <!-- /.container -->
</div> <!-- /#about -->
@*排行榜*@
<div id="contact" class="section-cotent">
    <div>
        <div class="container">
            <div class="title-section text-center">
                <h2>排行榜</h2>
                <span></span>
            </div> <!-- /.title-section -->

            <table class="table table-bordered">
                <tr>
                    <th>排行</th>
                    <th>美食名称</th>
                    <th>图片</th>
                    <th>类别</th>
                    <th>难度系数</th>
                    <th>点赞数</th>
                    <th>操作</th>
                </tr>

                @foreach (var item in foods)
                {
                    <tr>
                        <td>@ranknum</td>
                        <td>@item.FoodName</td>
                        <td><img width="130" height="80" src="~/images/food/@item.FoodPicture" /></td>
                        <td>@item.FoodType</td>
                        <td>@item.FoodDifficulty</td>
                        <td>@item.ThumbNumber</td>
                        <td>
                            <a class="btn btn-default" href="#">详情</a>
                            <a class="btn btn-danger" href="#">❤</a>
                        </td>
                    </tr>
                    ranknum++;
                }
            </table>
        </div>
    </div> <!-- /.container -->
</div> <!-- /#main-header -->

